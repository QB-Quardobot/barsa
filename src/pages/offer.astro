---
import Base from '../layouts/Base.astro';
import PDFViewer from '../components/PDFViewer.astro';
---

<Base 
  title="Публичная оферта" 
  description="Публичная оферта на оказание информационно-консультационных услуг."
>
  <section class="py-12 px-4">
    <div class="container max-w-container mx-auto max-w-6xl">
      <div class="space-y-8">
        <h1 class="text-4xl md:text-5xl font-bold text-white">
          Публичная оферта
        </h1>
        
        <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-2xl p-6 md:p-8">
          <PDFViewer 
            src="/ПУБЛИЧНАЯ_ОФЕРТА_AI_Influencer_3_0_УТВ_3РК.pdf"
            title="Публичная оферта"
            downloadUrl="/ПУБЛИЧНАЯ_ОФЕРТА_AI_Influencer_3_0_УТВ_3РК.pdf"
            fileName="ПУБЛИЧНАЯ_ОФЕРТА_AI_Influencer_3_0_УТВ_3РК.pdf"
          />
        </div>
        
        <div class="pt-8">
          <a href="/how-it-works" class="inline-flex items-center text-blue-400 hover:text-blue-300 transition-colors">
            ← Вернуться к выбору тарифа
          </a>
        </div>
      </div>
    </div>
  </section>
</Base>
