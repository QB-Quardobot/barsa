<script>
  // Initialize reveal animations for this page
  (function() {
    // First, ensure all elements are hidden initially (for reveal to work)
    function hideElementsInitially() {
      document.querySelectorAll('.reveal-up, .reveal-scale, .reveal-fade').forEach(el => {
        if (!el.classList.contains('is-revealed')) {
          el.style.opacity = '0';
          if (el.classList.contains('reveal-up')) {
            el.style.transform = 'translateY(30px)';
          } else if (el.classList.contains('reveal-scale')) {
            el.style.transform = 'scale(0.9)';
          }
        }
      });
    }
    
    // Hide elements immediately
    hideElementsInitially();
    
    function initRevealAnimations() {
      try {
        // Check if reveal is already initialized
        if (window.revealInstance) {
          return; // Already initialized
        }
        
        // Try to access reveal instance from global
        if (typeof window.initReveal === 'function') {
          window.initReveal();
        } else {
          // Fallback: Try importing reveal module directly
          import('/src/lib/reveal-init.js').then(() => {
            if (typeof window.initReveal === 'function') {
              window.initReveal();
            } else {
              // Final fallback: manually reveal all elements
              setTimeout(() => {
                document.querySelectorAll('.reveal-up, .reveal-scale, .reveal-fade').forEach(el => {
                  el.classList.add('is-revealed');
                  el.style.opacity = '1';
                  el.style.transform = '';
                });
              }, 300);
            }
          }).catch(() => {
            // If import fails, manually reveal all elements after delay
            setTimeout(() => {
              document.querySelectorAll('.reveal-up, .reveal-scale, .reveal-fade').forEach(el => {
                el.classList.add('is-revealed');
                el.style.opacity = '1';
                el.style.transform = '';
              });
            }, 500);
          });
        }
      } catch (e) {
        // Final fallback: show all elements after 1 second
        setTimeout(() => {
          document.querySelectorAll('.reveal-up, .reveal-scale, .reveal-fade').forEach(el => {
            el.classList.add('is-revealed');
            el.style.opacity = '1';
            el.style.transform = '';
          });
        }, 1000);
      }
    }
    
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initRevealAnimations, { once: true });
    } else {
      // Delay slightly to not block initial render
      setTimeout(initRevealAnimations, 100);
    }
  })();
</script>

