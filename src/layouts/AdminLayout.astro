---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>{title} | Admin Panel</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style is:global>
    :root {
      --of-blue: #00aff0;
      --of-blue-hover: #0091c7;
      --bg-dark: #000000;
      --card-bg: #121212;
      --card-border: rgba(255, 255, 255, 0.1);
      --text-primary: #ffffff;
      --text-secondary: #8a96a3;
      --font-sans: 'Inter', sans-serif;
    }

    body {
      background-color: var(--bg-dark);
      color: var(--text-primary);
      font-family: var(--font-sans);
      margin: 0;
      padding: 0;
      -webkit-font-smoothing: antialiased;
    }

    .admin-container {
      display: flex;
      min-height: 100vh;
    }

    /* Sidebar Styles */
    .sidebar {
      width: 260px;
      border-right: 1px solid var(--card-border);
      display: flex;
      flex-direction: column;
      position: fixed;
      height: 100vh;
      background: var(--bg-dark);
      z-index: 50;
    }

    .sidebar-header {
      padding: 24px;
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .logo-text {
      font-weight: 700;
      font-size: 20px;
      letter-spacing: -0.5px;
    }

    .logo-accent {
      color: var(--of-blue);
    }

    .sidebar-nav {
      flex: 1;
      padding: 12px;
    }

    .nav-item {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 12px 16px;
      color: var(--text-secondary);
      text-decoration: none;
      border-radius: 12px;
      font-weight: 500;
      transition: all 0.2s ease;
      margin-bottom: 4px;
    }

    .nav-item:hover {
      background: rgba(255, 255, 255, 0.05);
      color: var(--text-primary);
    }

    .nav-item.active {
      background: rgba(0, 175, 240, 0.1);
      color: var(--of-blue);
    }

    /* Main Content Styles */
    .main-content {
      flex: 1;
      margin-left: 260px;
      padding: 32px;
    }

    @media (max-width: 1024px) {
      .sidebar {
        width: 80px;
      }
      .sidebar .nav-text, .sidebar .logo-text {
        display: none;
      }
      .main-content {
        margin-left: 80px;
      }
    }

    @media (max-width: 640px) {
      .sidebar {
        display: none;
      }
      .main-content {
        margin-left: 0;
        padding: 20px;
      }
    }

    /* Common Admin Components */
    .premium-card {
      background: var(--card-bg);
      border: 1px solid var(--card-border);
      border-radius: 16px;
      padding: 24px;
      transition: border-color 0.2s ease;
    }

    .premium-card:hover {
      border-color: rgba(0, 175, 240, 0.3);
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 20px;
      margin-bottom: 32px;
    }

    .stat-value {
      font-size: 32px;
      font-weight: 700;
      margin: 8px 0;
    }

    .stat-label {
      color: var(--text-secondary);
      font-size: 14px;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .stat-subtitle {
      color: var(--text-secondary);
      font-size: 12px;
      margin-top: 4px;
      opacity: 0.7;
    }

    .premium-table {
      width: 100%;
      border-collapse: collapse;
    }

    .premium-table th {
      text-align: left;
      padding: 16px;
      color: var(--text-secondary);
      font-weight: 500;
      border-bottom: 1px solid var(--card-border);
    }

    .premium-table td {
      padding: 16px;
      border-bottom: 1px solid var(--card-border);
    }

    .premium-table tr:last-child td {
      border-bottom: none;
    }

    .badge {
      padding: 4px 12px;
      border-radius: 100px;
      font-size: 12px;
      font-weight: 600;
      text-transform: uppercase;
    }

    .badge-blue {
      background: rgba(0, 175, 240, 0.1);
      color: var(--of-blue);
    }

    .badge-purple {
      background: rgba(168, 85, 247, 0.1);
      color: #a855f7;
    }
  </style>
  <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body>
  <div class="admin-container">
    <aside class="sidebar">
      <div class="sidebar-header">
        <div class="logo-text">ADMIN<span class="logo-accent">PANEL</span></div>
      </div>
      <nav class="sidebar-nav">
        <a href="/admin" class={`nav-item ${Astro.url.pathname === '/admin' ? 'active' : ''}`}>
          <i data-lucide="layout-dashboard"></i>
          <span class="nav-text">Обзор</span>
        </a>
        <a href="/admin/leads" class={`nav-item ${Astro.url.pathname === '/admin/leads' ? 'active' : ''}`}>
          <i data-lucide="users"></i>
          <span class="nav-text">Лиды (Оферта)</span>
        </a>
        <a href="/admin/users" class={`nav-item ${Astro.url.pathname === '/admin/users' ? 'active' : ''}`}>
          <i data-lucide="message-square"></i>
          <span class="nav-text">Пользователи бота</span>
        </a>
        <a href="/admin/server" class={`nav-item ${Astro.url.pathname === '/admin/server' ? 'active' : ''}`}>
          <i data-lucide="server"></i>
          <span class="nav-text">Сервер</span>
        </a>
        <a href="/" class="nav-item">
          <i data-lucide="external-link"></i>
          <span class="nav-text">На сайт</span>
        </a>
      </nav>
    </aside>

    <main class="main-content">
      <slot />
    </main>
  </div>

  <script>
    // Initialize Lucide icons
    // @ts-ignore
    lucide.createIcons();
  </script>
</body>
</html>
