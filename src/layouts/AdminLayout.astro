---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>{title} | Admin Panel</title>
  <!-- Use system fonts to avoid CSP issues with external fonts -->
  <style is:global>
    :root {
      --of-blue: #00aff0;
      --of-blue-hover: #0091c7;
      --bg-dark: #050505;
      --card-bg: rgba(18, 18, 20, 0.9);
      --card-shadow: 0 18px 50px rgba(0, 0, 0, 0.45);
      --card-border: rgba(255, 255, 255, 0.1);
      --text-primary: #ffffff;
      --text-secondary: #8a96a3;
      --font-sans: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    }

    body {
      background:
        radial-gradient(900px 480px at 10% -10%, rgba(0, 175, 240, 0.12), transparent 60%),
        radial-gradient(600px 380px at 90% 0%, rgba(0, 175, 240, 0.08), transparent 60%),
        var(--bg-dark);
      color: var(--text-primary);
      font-family: var(--font-sans);
      margin: 0;
      padding: 0;
      -webkit-font-smoothing: antialiased;
    }

    .admin-container {
      display: flex;
      min-height: 100vh;
      width: 100%;
      position: relative;
    }

    /* Sidebar Styles */
    .sidebar {
      width: 260px;
      border-right: 1px solid var(--card-border);
      display: flex;
      flex-direction: column;
      position: fixed;
      height: 100vh;
      background: rgba(8, 8, 10, 0.95);
      backdrop-filter: blur(12px);
      z-index: 50;
      transition: transform 0.25s ease;
    }

    .sidebar-header {
      padding: 24px;
      display: flex;
      align-items: center;
      gap: 12px;
      border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    }

    .logo-text {
      font-weight: 700;
      font-size: 20px;
      letter-spacing: -0.5px;
    }

    .logo-accent {
      color: var(--of-blue);
    }

    .sidebar-nav {
      flex: 1;
      padding: 16px 12px;
      overflow-y: auto;
    }

    .nav-section {
      margin-bottom: 24px;
    }

    .nav-section-title {
      color: var(--text-secondary);
      font-size: 11px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      padding: 0 16px 8px;
      margin-bottom: 8px;
      opacity: 0.6;
    }

    .nav-item {
      display: flex;
      align-items: center;
      gap: 14px;
      padding: 14px 18px;
      color: var(--text-secondary);
      text-decoration: none;
      border-radius: 12px;
      border: 1px solid transparent;
      font-weight: 500;
      font-size: 15px;
      transition: all 0.25s ease;
      margin-bottom: 6px;
      position: relative;
      cursor: pointer;
    }

    .nav-item i {
      width: 20px;
      height: 20px;
      flex-shrink: 0;
    }

    .nav-item:hover {
      background: rgba(255, 255, 255, 0.08);
      border-color: rgba(255, 255, 255, 0.12);
      color: var(--text-primary);
      transform: translateX(2px);
    }

    .nav-item.active {
      background: linear-gradient(135deg, rgba(0, 175, 240, 0.15), rgba(0, 175, 240, 0.08));
      border-color: rgba(0, 175, 240, 0.4);
      color: var(--of-blue);
      box-shadow: 0 8px 20px rgba(0, 175, 240, 0.2);
      font-weight: 600;
    }

    .nav-item.active::before {
      content: '';
      position: absolute;
      left: 0;
      top: 50%;
      transform: translateY(-50%);
      width: 3px;
      height: 60%;
      background: var(--of-blue);
      border-radius: 0 2px 2px 0;
    }

    .nav-item:focus-visible {
      outline: 2px solid rgba(0, 175, 240, 0.6);
      outline-offset: 2px;
    }

    .nav-divider {
      height: 1px;
      background: rgba(255, 255, 255, 0.08);
      margin: 20px 16px;
    }

    /* Main Content Styles */
    .main-content {
      flex: 1;
      margin-left: 260px;
      padding: 36px 36px 48px;
      min-width: 0;
    }

    @media (max-width: 1024px) {
      .sidebar {
        width: 80px;
      }
      .sidebar .nav-text, .sidebar .logo-text, .sidebar .nav-section-title, .sidebar .nav-divider {
        display: none;
      }
      .sidebar .nav-item {
        justify-content: center;
        padding: 14px;
      }
      .sidebar .nav-item i {
        width: 24px;
        height: 24px;
      }
      .main-content {
        margin-left: 80px;
      }
    }

    @media (max-width: 640px) {
      .sidebar {
        transform: translateX(-100%);
        width: 78%;
        max-width: 320px;
      }
      .sidebar.is-open {
        transform: translateX(0);
        box-shadow: 10px 0 40px rgba(0, 0, 0, 0.5);
      }
      .sidebar.is-open .nav-text,
      .sidebar.is-open .nav-section-title,
      .sidebar.is-open .nav-divider {
        display: block;
      }
      .sidebar.is-open .nav-item {
        justify-content: flex-start;
        padding: 14px 18px;
      }
      .main-content {
        margin-left: 0;
        padding: 86px 18px 36px;
      }
    }

    /* Common Admin Components */
    .premium-card {
      background: var(--card-bg);
      border: 1px solid var(--card-border);
      border-radius: 18px;
      padding: 24px;
      transition: border-color 0.2s ease;
      box-shadow: var(--card-shadow);
      backdrop-filter: blur(8px);
    }

    .premium-card:hover {
      border-color: rgba(0, 175, 240, 0.3);
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 20px;
      margin-bottom: 32px;
    }

    .stat-value {
      font-size: 32px;
      font-weight: 700;
      margin: 8px 0;
    }

    .stat-label {
      color: var(--text-secondary);
      font-size: 14px;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .stat-subtitle {
      color: var(--text-secondary);
      font-size: 12px;
      margin-top: 4px;
      opacity: 0.7;
    }

    .premium-table {
      width: 100%;
      border-collapse: collapse;
    }

    .premium-table th {
      text-align: left;
      padding: 16px;
      color: var(--text-secondary);
      font-weight: 500;
      border-bottom: 1px solid var(--card-border);
      font-size: 13px;
      text-transform: uppercase;
      letter-spacing: 0.08em;
    }

    .premium-table td {
      padding: 16px;
      border-bottom: 1px solid var(--card-border);
    }

    .premium-table tr:last-child td {
      border-bottom: none;
    }

    .premium-table tbody tr:hover td {
      background: rgba(255, 255, 255, 0.02);
    }

    .badge {
      padding: 4px 12px;
      border-radius: 100px;
      font-size: 12px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.04em;
    }

    .badge-blue {
      background: rgba(0, 175, 240, 0.1);
      color: var(--of-blue);
    }

    .badge-purple {
      background: rgba(168, 85, 247, 0.1);
      color: #a855f7;
    }

    .logout-btn {
      margin-left: auto;
      background: rgba(255, 255, 255, 0.06);
      border: 1px solid var(--card-border);
      color: var(--text-secondary);
      padding: 6px 10px;
      border-radius: 8px;
      font-size: 12px;
      cursor: pointer;
    }

    .logout-btn:hover {
      color: var(--text-primary);
      border-color: rgba(255, 255, 255, 0.2);
    }

    .admin-auth-overlay {
      position: fixed;
      inset: 0;
      background: rgba(0, 0, 0, 0.75);
      backdrop-filter: blur(6px);
      display: none;
      align-items: center;
      justify-content: center;
      z-index: 100;
      padding: 24px;
    }

    .admin-auth-overlay.is-visible {
      display: flex;
    }

    .auth-card {
      width: 100%;
      max-width: 420px;
      background: var(--card-bg);
      border: 1px solid var(--card-border);
      border-radius: 16px;
      padding: 24px;
      box-shadow: 0 24px 60px rgba(0, 0, 0, 0.5);
    }

    .auth-title {
      font-size: 22px;
      font-weight: 700;
      margin: 0 0 8px 0;
    }

    .auth-subtitle {
      color: var(--text-secondary);
      margin: 0 0 20px 0;
      font-size: 14px;
    }

    .auth-input {
      width: 100%;
      padding: 12px 14px;
      border-radius: 10px;
      border: 1px solid var(--card-border);
      background: rgba(255, 255, 255, 0.04);
      color: var(--text-primary);
      font-size: 14px;
      margin-bottom: 12px;
    }

    .auth-input:focus {
      outline: none;
      border-color: rgba(0, 175, 240, 0.5);
      box-shadow: 0 0 0 3px rgba(0, 175, 240, 0.15);
    }

    .auth-submit {
      width: 100%;
      padding: 12px 14px;
      border-radius: 10px;
      border: none;
      background: var(--of-blue);
      color: #fff;
      font-weight: 600;
      cursor: pointer;
    }

    .auth-submit:hover {
      background: var(--of-blue-hover);
    }

    .auth-error {
      margin-top: 10px;
      color: #ef4444;
      font-size: 13px;
      min-height: 18px;
    }

    .table-container {
      border-radius: 14px;
      border: 1px solid rgba(255, 255, 255, 0.06);
      background: rgba(8, 8, 10, 0.6);
      overflow: hidden;
    }

    .mobile-topbar {
      display: none;
    }

    .menu-btn {
      background: rgba(255, 255, 255, 0.06);
      border: 1px solid rgba(255, 255, 255, 0.12);
      color: var(--text-primary);
      border-radius: 10px;
      padding: 10px;
      display: inline-flex;
      flex-direction: column;
      gap: 4px;
      cursor: pointer;
    }

    .menu-btn span {
      display: block;
      width: 18px;
      height: 2px;
      background: currentColor;
      border-radius: 2px;
    }

    .sidebar-backdrop {
      display: none;
      position: fixed;
      inset: 0;
      background: rgba(0, 0, 0, 0.6);
      z-index: 40;
    }

    .sidebar-backdrop.is-visible {
      display: block;
    }

    body.admin-menu-open {
      overflow: hidden;
    }

    @media (max-width: 640px) {
      .mobile-topbar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        padding: 14px 16px;
        background: rgba(8, 8, 10, 0.92);
        border-bottom: 1px solid rgba(255, 255, 255, 0.08);
        z-index: 45;
        backdrop-filter: blur(12px);
      }

      .mobile-brand {
        font-weight: 700;
        letter-spacing: 0.06em;
        font-size: 12px;
      }

      .logout-btn.mobile-logout {
        padding: 8px 10px;
        font-size: 11px;
      }

      .premium-table thead {
        display: none;
      }

      .premium-table,
      .premium-table tbody,
      .premium-table tr,
      .premium-table td {
        display: block;
        width: 100%;
      }

      .premium-table tr {
        border-bottom: 1px solid var(--card-border);
        padding: 10px 0;
      }

      .premium-table td {
        display: flex;
        justify-content: space-between;
        gap: 12px;
        padding: 8px 16px;
      }

      .premium-table td::before {
        content: attr(data-label);
        color: var(--text-secondary);
        font-size: 11px;
        text-transform: uppercase;
        letter-spacing: 0.08em;
      }

      .premium-table td[colspan] {
        justify-content: center;
      }

      .premium-table td[colspan]::before {
        content: '';
      }
    }
  </style>
</head>
<body>
  <div class="admin-auth-overlay" id="adminAuthOverlay" aria-hidden="true">
    <form class="auth-card" id="adminAuthForm">
      <h2 class="auth-title">Вход в админку</h2>
      <p class="auth-subtitle">Введите пароль для доступа к панели</p>
      <input class="auth-input" id="adminTokenInput" type="password" autocomplete="current-password" placeholder="Пароль" required />
      <button class="auth-submit" type="submit">Войти</button>
      <div class="auth-error" id="adminAuthError"></div>
    </form>
  </div>
  <div class="admin-container">
    <aside class="sidebar" id="adminSidebar">
      <div class="sidebar-header">
        <div class="logo-text">ADMIN<span class="logo-accent">PANEL</span></div>
        <button class="logout-btn" type="button" data-admin-logout>Выйти</button>
      </div>
      <nav class="sidebar-nav">
        <div class="nav-section">
          <div class="nav-section-title">Панель управления</div>
          <a href="/admin" class={`nav-item ${Astro.url.pathname === '/admin' ? 'active' : ''}`}>
            <i data-lucide="layout-dashboard"></i>
            <span class="nav-text">Обзор</span>
          </a>
          <a href="/admin/leads" class={`nav-item ${Astro.url.pathname === '/admin/leads' ? 'active' : ''}`}>
            <i data-lucide="users"></i>
            <span class="nav-text">Лиды</span>
          </a>
          <a href="/admin/users" class={`nav-item ${Astro.url.pathname === '/admin/users' ? 'active' : ''}`}>
            <i data-lucide="user-check"></i>
            <span class="nav-text">Пользователи</span>
          </a>
          <a href="/admin/server" class={`nav-item ${Astro.url.pathname === '/admin/server' ? 'active' : ''}`}>
            <i data-lucide="server"></i>
            <span class="nav-text">Сервер</span>
          </a>
        </div>
        
        <div class="nav-divider"></div>
        
        <div class="nav-section">
          <div class="nav-section-title">Дополнительно</div>
          <a href="/" class="nav-item">
            <i data-lucide="external-link"></i>
            <span class="nav-text">На сайт</span>
          </a>
          <a href="https://t.me/ai_producer_ilya" target="_blank" rel="noopener noreferrer" class="nav-item">
            <i data-lucide="message-circle"></i>
            <span class="nav-text">Техподдержка</span>
          </a>
        </div>
      </nav>
    </aside>
    <div class="sidebar-backdrop" id="sidebarBackdrop"></div>

    <header class="mobile-topbar">
      <button class="menu-btn" id="adminMenuToggle" type="button" aria-label="Открыть меню" aria-controls="adminSidebar" aria-expanded="false">
        <span></span>
        <span></span>
        <span></span>
      </button>
      <div class="mobile-brand">ADMIN<span class="logo-accent">PANEL</span></div>
      <button class="logout-btn mobile-logout" type="button" data-admin-logout>Выйти</button>
    </header>

    <main class="main-content">
      <slot />
    </main>
  </div>

  <script>
    if (window.lucide && typeof window.lucide.createIcons === 'function') {
      // @ts-ignore
      window.lucide.createIcons();
    }

    const ADMIN_TOKEN_KEY = 'adminAuthToken';
    const authOverlay = document.getElementById('adminAuthOverlay');
    const authForm = document.getElementById('adminAuthForm');
    const tokenInput = document.getElementById('adminTokenInput');
    const authError = document.getElementById('adminAuthError');
    const logoutButtons = document.querySelectorAll('[data-admin-logout]');
    const menuToggle = document.getElementById('adminMenuToggle');
    const sidebar = document.getElementById('adminSidebar');
    const sidebarBackdrop = document.getElementById('sidebarBackdrop');

    function setMenuOpen(open) {
      if (!sidebar) return;
      sidebar.classList.toggle('is-open', open);
      if (sidebarBackdrop) {
        sidebarBackdrop.classList.toggle('is-visible', open);
      }
      document.body.classList.toggle('admin-menu-open', open);
      if (menuToggle) {
        menuToggle.setAttribute('aria-expanded', open ? 'true' : 'false');
      }
    }

    function setAuthOverlayVisible(visible) {
      if (!authOverlay) return;
      authOverlay.classList.toggle('is-visible', visible);
      authOverlay.setAttribute('aria-hidden', visible ? 'false' : 'true');
      document.body.style.overflow = visible ? 'hidden' : '';
      if (visible && tokenInput) tokenInput.focus();
    }

    function getAdminToken() {
      try {
        return localStorage.getItem(ADMIN_TOKEN_KEY) || '';
      } catch (e) {
        return '';
      }
    }

    function setAdminToken(token) {
      try {
        localStorage.setItem(ADMIN_TOKEN_KEY, token);
      } catch (e) {}
    }

    async function validateAdminToken(token) {
      if (!token) return false;
      try {
        const response = await fetch('/api/admin/stats', {
          headers: { 'X-Admin-Token': token }
        });
        return response.ok;
      } catch (e) {
        return false;
      }
    }

    window.adminFetch = async (input, init = {}) => {
      const token = getAdminToken();
      const headers = new Headers(init.headers || {});
      if (token) headers.set('X-Admin-Token', token);
      const response = await fetch(input, { ...init, headers });
      if (response.status === 403) {
        setAuthOverlayVisible(true);
        throw new Error('Unauthorized');
      }
      return response;
    };

    window.ensureAdminAuth = async () => {
      const token = getAdminToken();
      if (!token) {
        setAuthOverlayVisible(true);
        return false;
      }
      const ok = await validateAdminToken(token);
      setAuthOverlayVisible(!ok);
      return ok;
    };

    if (authForm) {
      authForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        if (!tokenInput) return;
        const token = tokenInput.value.trim();
        if (!token) return;
        const ok = await validateAdminToken(token);
        if (!ok) {
          if (authError) authError.textContent = 'Неверный пароль. Попробуйте ещё раз.';
          return;
        }
        setAdminToken(token);
        if (authError) authError.textContent = '';
        setAuthOverlayVisible(false);
        window.location.reload();
      });
    }

    if (logoutButtons && logoutButtons.length > 0) {
      logoutButtons.forEach((btn) => {
        btn.addEventListener('click', () => {
          try {
            localStorage.removeItem(ADMIN_TOKEN_KEY);
          } catch (e) {}
          setAuthOverlayVisible(true);
          setMenuOpen(false);
        });
      });
    }

    if (menuToggle) {
      menuToggle.addEventListener('click', () => {
        const isOpen = sidebar && sidebar.classList.contains('is-open');
        setMenuOpen(!isOpen);
      });
    }

    if (sidebarBackdrop) {
      sidebarBackdrop.addEventListener('click', () => setMenuOpen(false));
    }

    const sidebarLinks = document.querySelectorAll('.sidebar .nav-item');
    sidebarLinks.forEach((link) => {
      link.addEventListener('click', () => setMenuOpen(false));
    });

    // Initial auth check
    window.ensureAdminAuth && window.ensureAdminAuth();
  </script>
</body>
</html>
